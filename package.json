{
  "name": "i18njs",
  "version": "1.0.0",
  "description": "Sistema de internacionalizaciÃ³n ligero para JavaScript/TypeScript usando data-attributes",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "src/**/*",
    "demo/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "nodemon --exec ts-node src/index.ts",
    "dev:demo": "node scripts/dev-server.js",
    "dev:watch": "nodemon --watch src --ext ts --exec \"npm run build:fast\"",
    "build": "node scripts/build.js",
    "build:fast": "npm run clean && npm run compile",
    "build:watch": "npm run compile -- --watch",
    "compile": "tsc",
    "clean": "rimraf dist",
    "copy-demo": "copyfiles -u 1 \"demo/**/*\" dist/",
    "serve": "http-server dist -p 3000 -o",
    "serve:demo": "http-server demo -p 8080 -o",
    "serve:dev": "http-server . -p 8000 -o",
    "test": "echo \"Error: no test specified\" && exit 1",
    "test:demo": "node scripts/test-demo.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"demo/**/*.{html,css,js}\" \"scripts/**/*.js\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"demo/**/*.{html,css,js}\" \"scripts/**/*.js\"",
    "prepublishOnly": "npm run build",
    "start": "npm run dev:demo",
    "version:patch": "npm version patch && npm run build",
    "version:minor": "npm version minor && npm run build",
    "version:major": "npm version major && npm run build"
  },
  "keywords": [
    "i18n",
    "internationalization",
    "localization",
    "translation",
    "typescript",
    "javascript",
    "data-attributes",
    "multilingual"
  ],
  "author": "trystan4861",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/trystan4861/I18NJS.git"
  },
  "bugs": {
    "url": "https://github.com/trystan4861/I18NJS/issues"
  },
  "homepage": "https://github.com/trystan4861/I18NJS#readme",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "http-server": "^14.1.1",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.0",
    "process-nextick-args": "^2.0.1",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
